<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.humraz.pocketdemocracy.personalinfo"
    android:background="#00b0ff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        android:background="?attr/colorPrimaryDark">

        <LinearLayout

            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="Enter Details"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:id="@+id/b"
                android:layout_below="@+id/ed1"
                android:layout_centerHorizontal="true"

                android:onClick="getda"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter First Name"
                app:met_baseColor="#151616"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:id="@+id/fname"
                app:met_floatingLabel="normal"
                app:met_minCharacters="0"
                app:met_maxCharacters="25"

                android:layout_marginTop="20dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Last Name"
                app:met_baseColor="#020202"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:id="@+id/lname"
                app:met_floatingLabel="normal"

                app:met_minCharacters="0"
                app:met_maxCharacters="15"

                android:layout_marginTop="15dp" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Adhar Number"
                app:met_baseColor="#000000"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:id="@+id/ahdno"
                app:met_floatingLabel="normal"
                app:met_minCharacters="0"
                app:met_maxCharacters="25"

                android:layout_marginTop="15dp" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter PinCode"
                app:met_baseColor="#030303"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:id="@+id/pincode"
                app:met_floatingLabel="normal"
                app:met_minCharacters="0"
                app:met_maxCharacters="15"

                android:layout_marginTop="15dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                app:met_baseColor="#060606"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:inputType="number"
                android:id="@+id/phno"
                app:met_floatingLabel="normal"

                app:met_minCharacters="0"
                app:met_maxCharacters="15"

                android:layout_marginTop="15dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date Of Birth"
                app:met_baseColor="#080808"
                app:met_primaryColor="#ff46e358"
                app:met_errorColor="#ffff7064"
                android:inputType="date"
                android:id="@+id/dob"
                app:met_floatingLabel="normal"

                app:met_minCharacters="0"
                app:met_maxCharacters="15"

                android:layout_marginTop="15dp" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_marginTop="25dp"
                android:layout_width="200dp"
                android:layout_height="40dp"

                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:bootstrapText="Confirm "
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:layout_gravity="center_horizontal"

                android:onClick="getdata"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
